{
  "uid": "dockerstats_core",
  "id": null,
  "title": "Docker Stats Exporter - Core Container Metrics",
  "tags": ["docker", "dockerstats", "linux"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "style": "dark",
  "editable": true,
  "refresh": "10s",
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard",
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        }
      }
    ]
  },
  "templating": {
    "list": [
      {
        "name": "container",
        "label": "Container",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "definition": "label_values(dockerstats_cpu_usage_ratio, name)",
        "query": {
          "query": "label_values(dockerstats_cpu_usage_ratio, name)",
          "refId": "StandardVariableQuery"
        },
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": ["All"],
          "value": ["$__all"]
        }
      }
    ]
  },
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU usage (%) by container",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "max by (name) (dockerstats_cpu_usage_ratio{job=\"docker_stats\", name=~\"$container\"})",
          "legendFormat": "{{name}}"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Memory usage (%) by container",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "percent" } },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "max by (name) (dockerstats_memory_usage_ratio{job=\"docker_stats\", name=~\"$container\"})",
          "legendFormat": "{{name}}"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Block I/O read (B/s) by container",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "Bps" } },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (name) (rate(dockerstats_blockio_read_bytes{job=\"docker_stats\", name=~\"$container\"}[1m]))",
          "legendFormat": "{{name}}"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Block I/O write (B/s) by container",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "Bps" } },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (name) (rate(dockerstats_blockio_written_bytes{job=\"docker_stats\", name=~\"$container\"}[1m]))",
          "legendFormat": "{{name}}"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "single" }
      }
    },
    {
      "type": "timeseries",
      "title": "Network throughput (B/s) by container",
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "fieldConfig": { "defaults": { "unit": "Bps" } },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 16 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (name) (rate(dockerstats_network_received_bytes{job=\"docker_stats\", name=~\"$container\"}[1m]))",
          "legendFormat": "{{name}} RX"
        },
        {
          "refId": "B",
          "expr": "sum by (name) (rate(dockerstats_network_transmitted_bytes{job=\"docker_stats\", name=~\"$container\"}[1m]))",
          "legendFormat": "{{name}} TX"
        }
      ],
      "options": {
        "legend": { "displayMode": "table", "placement": "right" },
        "tooltip": { "mode": "single" }
      }
    }
  ]
}
